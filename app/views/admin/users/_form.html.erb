<%= form_for @user, url: admin_user_path(@user), html: { method: :patch } do |f| %>
	
	<% if @user.errors.any? %>
		<div id="error">
			<p>You have <%= pluralize(@user.errors.count, "error") %> . Please check the list below and correct them.</p>
		</div>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		</ul>
		<% end %>
	<% end %>
		
	<table summary="user">
		<tr>
			<th><%= f.label :name, "Name" %></th>
			<td> <%= f.text_field :name, class: "text_field" %></td>
		</tr>
		<tr>
			<th><%= f.label :address, "Address" %></th>
			<td><%= f.text_area :address, class: "text_area" %></td>
		</tr>
		<tr>
			<th><%= f.label :email, "email" %></th>
			<td><%= f.text_area :email, class: "text_area" %></td>
		</tr>
	</table>	

		<%= f.submit "Submit", class: "submit", :disable_with => 'Submiting...' %>
	
<% end %> 

<%= link_to 'delete this user', admin_user_path, method: :delete, data: {confirm: 'are you sure you want to delete this user?'} %>